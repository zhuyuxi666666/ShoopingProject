<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.china.lhf.app.widget.HomeToolbar
        android:id="@+id/address_list_toolbar"
        style="@style/ToolbarStyle"
        android:contentInsetEnd="56dp"
        app:isShowSearchView="false"
        app:leftButton="@drawable/icon_back_32px"
        app:rightButton="@drawable/icon_add" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/address_list_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/address_list_toolbar">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>